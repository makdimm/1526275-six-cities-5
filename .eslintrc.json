{
  "env": {
    "es6": true,

    "browser": true,

    "commonjs": true
  },

  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },

    "ecmaVersion": 6,
    "sourceType": "module"
  },

  "plugins": ["react", "prettier"],

  "rules": {
    "prettier/prettier": ["error", { "singleQuote": false }]
  },

  "extends": [
    "htmlacademy/es6",

    "plugin:react/recommended",

    "plugin:prettier/recommended"
  ],

  "settings": {
    "react": {
      "version": "16"
    }
  }
}
